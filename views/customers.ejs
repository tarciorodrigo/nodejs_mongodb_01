<%- include('top.ejs') %>
  <div class="alert alert-info">
    <%= qty %> Clientes cadastrados
  </div>
  <table class="table table-bordered table-striped table-hover">
    <thead class="thead-dark">
      <tr>
        <td>Nome</td>
        <td>CPF</td>        
        <td>Idade</td>
        <td>Região</td>
        <td>Ações</td>
      </tr>
    </thead>
    <tbody>
      <% customers.forEach(item=> {
        %>
        <tr>
          <td><a href="/customers/edit/<%= item._id %>">
              <%= item.nome %>
            </a>
          </td>
          <td>
            <%= item.cpf %>
          </td>            
          <td>
            <%= item.idade %>
          </td>
          <td>
            <%= item.cidade %>
              <%= item.uf %>
          </td>
          <td>
            <a href="/customers/edit/<%= item._id %>" title="Editar" class="btn btn-secondary">
              <img src="/images/edit.png" />
            </a>
            <a href="/customers/delete/<%= item._id %>" title="Excluir" class="btn btn-danger"
              onclick="return confirm('Confirma exlusão do cliente <%= item.nome %>?')">
              <img src="/images/delete.png" />
            </a>
          </td>
        </tr>
        <% }) %>
    </tbody>
  </table>
  <nav aria-label="Page navigation example">
    <ul class="pagination">
      <% for(let i=1; i <= pagesQty; i++) {%>

        <% if(page === i) {%>
          <li class="page-item"><a class="page-link active" href="/customers/<%= i %>"><%= i %></a></li>
        <%} else {%>
          <li class="page-item"><a class="page-link" href="/customers/<%= i %>"><%= i %></a></li>
        <%}%>
      <%}%>
    </ul>    
  </nav>  
  <div class="row">
    <div class="col-2">
      <a href="/customers/new" target="_self"  class="btn btn-primary">Cadastrar cliente</a>
    </div>
    <div class="col-2">
      <a href="/customers" target="_self" class="btn btn-secondary">Cancelar</a>  
    </div>
    <div class="col-2">
      <form action="/logout" method="POST">
        <input type="submit" value="Logout" class="btn btn-secondary"/>
      </form>
    </div>    
  </div>
  <%- include('bottom.ejs') %>